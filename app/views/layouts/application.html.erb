<!DOCTYPE html>
<html>
  <head>
    <title>PlannerApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <section class="top-section">
    
      <nav class="navbar">
        <%= link_to 'PLANO', root_path, class: "text-logo" %>
        <section class="nav-user">
        <% if user_signed_in? %>
          <%# <h3>Hi <%= current_user.username</h3> %>
          <%# <%= link_to 'Logout', destroy_user_session_path, method: :delete, class: 'login' %>
          <div class="btn-group">
            <button type="button" class="btn dropdown-toggle signin" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              Hello <%= current_user.username %>
            </button>
            <div class="dropdown-menu">
              <a class="dropdown-item" href="#">Action</a>
              <a class="dropdown-item" href="#">Another action</a>
              <a class="dropdown-item" href="#">Something else here</a>
              <div class="dropdown-divider"></div>
              <%= link_to 'Logout', destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </div>
        <% else %>
          <%= link_to 'Login', new_user_session_path, class: 'login' %>
          <%= link_to 'Try Plano for free', new_user_registration_path, class: 'signin' %>
        <% end %>
        </section>
      </nav>
      <main>
        <section class="flash-message-container">
          <%= render 'components/flash_messages' %>
        </section>
        <%= yield %>
      </main>

      <div id="categoryModal" class="modal hide fade" aria-labelledby="exampleModalLabel" aria-hidden="true" role="dialog">
        <div class="modal-dialog modal-dialog-scrollable" role="document">
          <div class="modal-content" id="modal-content">
          </div>
        </div>
      </div>

      <%# show modal %>
      <div id="showModal" class="modal hide fade" aria-labelledby="exampleModalLabel" aria-hidden="true" role="dialog">
        <div class="modal-dialog modal-dialog-scrollable" role="document">
          <div class="modal-content" id="modal-content">
          </div>
        </div>
      </div>
    </section>
    

    <footer>
      Created by Christian Michael Dollosa. Â© 2021
    </footer>

  <%# general modal %>
  

  </body>
</html>
