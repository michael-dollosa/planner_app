<div class="modal-header">
  <h5 class="modal-title" id="editTaskModalTitle">Edit Task</h5>
  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
  </div>
    <div class="modal-body">
      <%= form_with model: [:category, @task], method: :put do |form| %>
      <%= form.label :title, "Title" %>
      <%= form.text_field :title %>
      <%= form.label :body, "Description" %>
      <%= form.text_area :body %>
      <%= form.label :status, "Status" %>
      <%= form.select :status, ["New", "Ongoing", "Completed"] %>
      <%= form.label :due_date, "Due Date" %>
      <%= form.date_field :due_date, value: @task.due_date.strftime('%Y-%m-%d'), min: Date.today %>
      <%= form.submit "Update", class: "submit" %>
      <% end %>
    </div>
  </div>
</div>