<div class="modal-header">
  <h5 class="modal-title" id="showTaskModalTitle"><%= @task.title %></h5>
  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
  </div>
    <div class="modal-body">
      <%= simple_format(@task.body) %>
      <h5>Due date: <%= @task.due_date.strftime("%b %d, %Y") %></h5>
    </div>
    <div class="modal-footer">
      
      <%= link_to 'Delete', category_task_path(category_id: @task.category_id, id: @task.id), method: :delete, class: "delete", data: {confirm: "Any progress on this task will be deleted once you confirm", commit: 'Delete'} %>
      <%= link_to 'Edit', edit_category_task_path(category_id: @task.category_id, id: @task.id), {remote: true, 'data-toggle' =>  "modal", 'data-target' => '#categoryModal', class: "edit", id: "taskEdit" } %>
      </div>
  </div>
</div>

